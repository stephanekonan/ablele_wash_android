<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/main"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".Activities.Auth.RegisterActivity">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:elevation="3dp"        android:paddingVertical="16dp"        android:paddingHorizontal="30dp"        tools:ignore="MissingConstraints">        <ImageView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:src="@drawable/arrow_back_icon"            tools:ignore="ContentDescription" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="Inscription"            android:textSize="20sp"            android:textColor="@color/black"            android:fontFamily="@font/poppinsbold"            android:layout_centerInParent="true"            tools:ignore="HardcodedText" />    </RelativeLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent">        <ScrollView            android:layout_width="match_parent"            android:layout_height="wrap_content"            tools:ignore="UselessParent">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                android:orientation="vertical"                tools:ignore="ScrollViewSize">                <LinearLayout                    android:layout_marginTop="80dp"                    android:id="@+id/content_layout"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:orientation="vertical"                    android:gravity="center"                    app:layout_constraintTop_toBottomOf="@id/helloText"                    app:layout_constraintStart_toStartOf="parent"                    app:layout_constraintEnd_toEndOf="parent"                    android:layout_marginHorizontal="30dp"                    tools:ignore="UseCompoundDrawables,UselessParent">                    <TextView                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginBottom="20dp"                        android:text="Créer un compte"                        android:textSize="25sp"                        android:fontFamily="@font/poppinsbold"                        android:textColor="@color/black"                        android:gravity="start"                        tools:ignore="HardcodedText" />                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:orientation="vertical"                        tools:ignore="ScrollViewSize,VisualLintBounds">                        <EditText                            android:id="@+id/nomComplet"                            android:layout_width="match_parent"                            android:layout_height="45dp"                            android:layout_marginBottom="15dp"                            android:background="@drawable/custom_input"                            android:drawableStart="@drawable/custom_user_icon"                            android:drawablePadding="12dp"                            android:ems="10"                            android:fontFamily="@font/poppinsregular"                            android:hint="Entrez votre nom complet"                            android:inputType="textEmailAddress"                            android:paddingStart="12dp"                            android:paddingEnd="12dp"                            android:textColor="@color/black"                            android:textSize="14sp"                            tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck,TextContrastCheck,VisualLintTextFieldSize" />                        <EditText                            android:id="@+id/phoneNumber"                            android:layout_width="match_parent"                            android:layout_height="45dp"                            android:layout_marginBottom="15dp"                            android:background="@drawable/custom_input"                            android:drawableStart="@drawable/custom_phone_icon"                            android:drawablePadding="12dp"                            android:ems="10"                            android:fontFamily="@font/poppinsregular"                            android:hint="Entrez votre numéro de téléphone"                            android:inputType="phone"                            android:paddingStart="12dp"                            android:paddingEnd="12dp"                            android:textColor="@color/black"                            android:textSize="14sp"                            tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck,TextContrastCheck,VisualLintTextFieldSize" />                        <EditText                            android:id="@+id/numeroCni"                            android:layout_width="match_parent"                            android:layout_height="45dp"                            android:layout_marginBottom="15dp"                            android:background="@drawable/custom_input"                            android:drawableStart="@drawable/custom_cni_icon"                            android:drawablePadding="12dp"                            android:ems="10"                            android:fontFamily="@font/poppinsregular"                            android:hint="Entrez votre numéro CNI"                            android:inputType="textEmailAddress"                            android:paddingStart="12dp"                            android:paddingEnd="12dp"                            android:textColor="@color/black"                            android:textSize="14sp"                            tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck,TextContrastCheck,VisualLintTextFieldSize" />                        <EditText                            android:id="@+id/email"                            android:layout_width="match_parent"                            android:layout_height="45dp"                            android:layout_marginBottom="15dp"                            android:background="@drawable/custom_input"                            android:drawableStart="@drawable/custom_email_icon"                            android:drawablePadding="12dp"                            android:ems="10"                            android:fontFamily="@font/poppinsregular"                            android:hint="Entrez votre email"                            android:inputType="textEmailAddress"                            android:paddingStart="12dp"                            android:paddingEnd="12dp"                            android:textColor="@color/black"                            android:textSize="14sp"                            tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck,TextContrastCheck,VisualLintTextFieldSize" />                        <EditText                            android:id="@+id/password"                            android:layout_width="match_parent"                            android:layout_height="45dp"                            android:background="@drawable/custom_input"                            android:drawableStart="@drawable/custom_lock_icon"                            android:drawableEnd="@drawable/eye_icon"                            android:drawablePadding="12dp"                            android:ems="10"                            android:fontFamily="@font/poppinsregular"                            android:hint="******************"                            android:inputType="textPassword"                            android:paddingStart="12dp"                            android:paddingEnd="12dp"                            android:textColor="@color/black"                            android:textSize="16sp"                            tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck,TextContrastCheck,VisualLintTextFieldSize" />                        <TextView                            android:id="@+id/toLoginActivity"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_marginTop="10dp"                            android:text="Déja un compte. Se connecter"                            android:textColor="@color/blue_primary"                            android:textSize="14sp"                            android:gravity="end"                            tools:ignore="HardcodedText,TextSizeCheck" />                        <Button                            android:id="@+id/registerButton"                            android:layout_width="match_parent"                            android:layout_height="45dp"                            android:layout_marginTop="50dp"                            android:background="@drawable/custom_btn"                            android:text="S'inscrire"                            android:textColor="@color/white"                            tools:ignore="HardcodedText,TouchTargetSizeCheck,VisualLintButtonSize" />                        <ImageView                            android:layout_width="match_parent"                            android:layout_height="50dp"                            android:layout_marginVertical="15dp"                            android:src="@drawable/or_icon"                            tools:ignore="ContentDescription,HardcodedImage,ImageContrastCheck" />                        <LinearLayout                            android:id="@+id/google_btn"                            android:layout_width="match_parent"                            android:layout_height="45dp"                            android:orientation="horizontal"                            android:text="Connexion"                            android:gravity="center"                            android:layout_gravity="center"                            android:background="@drawable/custom_without_fill"                            android:elevation="5dp"                            android:textColor="@color/white"                            tools:ignore="HardcodedText">                            <ImageView                                android:layout_width="20dp"                                android:layout_height="20dp"                                android:src="@drawable/google_icon"                                tools:ignore="ContentDescription" />                            <TextView                                android:layout_marginHorizontal="10dp"                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:text="Se connecter avec Gmail"                                android:textSize="14sp"                                android:fontFamily="@font/poppinsmedium"                                android:textColor="@color/blue_primary"/>                        </LinearLayout>                    </LinearLayout>                </LinearLayout>            </LinearLayout>        </ScrollView>    </LinearLayout></androidx.constraintlayout.widget.ConstraintLayout>