                    android:layout_height="80dp"
                    android:layout_rowSpan="1"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="2"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp"
                    tools:ignore="TextSizeCheck">

